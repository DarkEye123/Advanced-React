enum Permission {
  ADMIN
  USER
  ITEM_CREATE
  ITEM_UPDATE
  ITEM_DELETE
  PERMISSION_UPDATE
}

type User {
  id: ID! @unique
  name: String
  email: String! @unique
  password: String!
  permissions: [Permission!]!
  resetToken: String @unique
  resetTokenExpiry: Float
}

type Item {
  id: ID! @unique
  title: String!
  description: String!
  image: String
  largeImage: String
  price: Int!
  createdAt: DateTime!
  updatedAt: DateTime!
  user: User!
}

type CartItem {
  id: ID! @unique
  quantity: Int @default(value: 1)
  user: User!
  item: Item!
}
